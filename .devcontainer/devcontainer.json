{
  "name": "React Native Bare + Android SDK + Expo",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postStartCommand": "node scripts/portPublisher.js",
  "remoteUser": "root",
  "forwardPorts": [
    19000,
    19001,
    19002,
    8081
  ],
  "publicPorts": [
    8081
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "dsznajder.es7-react-js-snippets",
        "msjsdiag.debugger-for-chrome",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}