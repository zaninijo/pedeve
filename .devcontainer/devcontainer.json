{
  "name": "Expo Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "forwardPorts": [19000, 19001, 19002],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "msjsdiag.vscode-react-native",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "remoteUser": "node"
}
