{
  "name": "Node + React Native Bare + Android SDK + Expo",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/workspaces/pedeve",
  "postStartCommand": "node scripts/portPublisher.js",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "dsznajder.es7-react-js-snippets",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "typescript.tsserver.exclude": [
        "**/node_modules"
      ]
    }
  }
}
